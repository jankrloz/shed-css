{
  "name": "shed-css",
  "version": "1.4.0",
  "description": "Functional and customizable CSS utilities with familiar names",
  "main": "lib/index.css",
  "style": "lib/index.css",
  "sass": "lib/index.scss",
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "install-peers": "npm ls 2>/dev/null | grep \"UNMET PEER DEPENDENCY\" | awk '{print $NF}' | xargs npm install -D",
    "setup": "mkdir -p lib && touch lib/index.css",
    "prestart": "run-s setup",
    "start": "npm run dev",
    "dev": "npm-run-all build:css:dist --parallel watch:css serve",
    "compile:css:loops": "postcss index.css -u postcss-import -u postcss-at-rules-variables -u postcss-for -u postcss-each -u postcss-conditionals",
    "compile:css": "npm run compile:css:loops -- -u postcss-cssnext -o ./dist/index.css",
    "compress:css": "postcss ./dist/index.css -u cssnano -d ./dist",
    "tosass:css": "css-scss lib/index.css lib/index.scss",
    "compile:theme": "cp src/generate-theme.scss lib/generate-theme.scss",
    "watch:css": "npm run compile:css -- -w './**/**/*.css' -d ./dist",
    "build:css:dist": "run-s 'compile:css -- -d ./dist' compress:css",
    "build:css:lib": "run-p 'compile:css:loops -- -d ./lib/' tosass:css compile:theme",
    "serve": "browser-sync start --server \"./styleguide\" --files \"styleguide\" \"dist/*.css\" --port \"1337\" --no-open",
    "build": "run-p setup build:css:lib build:css:dist",
    "prepublish": "run-s build",
    "test": "echo \"Error: no test specified\" && exit 0",
    "predev:docs": "run-s build",
    "dev:docs": "gulp --cwd documentation/ --dev",
    "build:docs": "gulp --cwd documentation/",
    "push_pages": "npm run build:docs && gh-pages -d documentation/dist -b gh-pages"
  },
  "keywords": [
    "css",
    "functional",
    "atomic",
    "immutable",
    "utility classes"
  ],
  "author": "Vince Speelman",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6",
    "babel-loader": "7.0.0",
    "babel-preset-es2015": "^6",
    "babel-preset-stage-2": "^6",
    "browser-sync": "2.18.12",
    "chokidar-cli": "1.2.0",
    "css-modularscale": "1.1.1",
    "css-scss-cli": "1.0.0",
    "cssnano": "3.10.0",
    "del": "^2",
    "fabricator-assemble": "^1.1.10",
    "gh-pages": "1.0.0",
    "gulp": "^3",
    "gulp-autoprefixer": "4.0.0",
    "gulp-csso": "3.0.0",
    "gulp-if": "^2",
    "gulp-imagemin": "3.2.0",
    "gulp-postcss": "7.0.0",
    "gulp-rename": "^1",
    "gulp-sass": "3.1.0",
    "gulp-sourcemaps": "2.6.0",
    "gulp-util": "^3",
    "handlebars-helper-strict-equal": "1.0.0",
    "handlebars-helpers": "0.8.2",
    "imports-loader": "0.7.1",
    "npm-run-all": "4.0.2",
    "npmpub": "3.1.0",
    "postcss": "6.0.1",
    "postcss-at-rules-variables": "0.1.1",
    "postcss-cli": "4.0.0",
    "postcss-conditionals": "2.1.0",
    "postcss-cssnext": "2.11.0",
    "postcss-each": "0.10.0",
    "postcss-for": "2.1.1",
    "postcss-import": "10.0.0",
    "postcss-simple-vars": "4.0.0",
    "run-sequence": "^1",
    "script-loader": "0.7.0",
    "shed-css": "latest",
    "webpack": "2.6.1"
  }
}
